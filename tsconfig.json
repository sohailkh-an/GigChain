{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "outDir": "dist",
    
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/register/api/route.js", "src/app/register/page.tsx", "src/app/signIn/api/route.js", "src/app/lib/featuredServices/featuredServices.js", "src/components/featuredServicesSection/featuredServicesSection.js"],
  "exclude": ["node_modules"]
}
